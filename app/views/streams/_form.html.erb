<%= form_for(@stream, :html => { :class => 'form-horizontal' }) do |f| %>
  <% if @stream.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@stream.errors.count, "error") %> prohibited this stream from being saved:</h2>

      <ul>
      <% @stream.errors.full_messages.each do |msg| %>
        <li><p class="text-error"><%= msg %></p></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <label class="control-label" for="stream_name">Name:</label>
    <div class="controls">
      <%= f.text_field :name, :class => "input-xlarge" %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="stream_description">Description:</label>
    <div class="controls">
      <%= f.text_area :description, :rows => 4, :class => "input-xxlarge" %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <button id="stream_submit" name="commit" type="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>
<% end %>
